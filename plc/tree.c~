#include<stdio.h>
void main(){
	int i=0,j=0,k=0,l=0,n=6;
	while(i++<n){
		l=0;
		while(l++<=n && i%2)
		printf(" ");
		j=i;
		if(j%2){
			//odd
			printf("#");
			while(j++<=(n-2))
				printf("x");
		}else {
			//even
			while(l++<=(n-1))
				printf(" ");
			
			while(j++<=(n-i))
				printf("$");
			printf("#");
		}

		printf("\n");

	}
}
