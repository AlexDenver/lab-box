#include<stdio.h>
#include<math.h>
void main(){
	int x1,y1,x2,y2;
	double dist;
	printf("Enter Co-Ordinates for Point 1: ");
	scanf("%d%d",&x1,&y2);
	printf("Enter Co-Ordinates for Point 2: ");
	scanf("%d%d",&x2,&y2);
	dist = sqrt(pow((x2-x1),2) + pow((y2-y1),2));
	printf("\nDistance between the points (%d,%d) and (%d,%d) is %.1f Units\n\n",x1,y1,x2,y2,dist);
}
